{
  "version": 2,
  "builds": [
    { "src": "**/*.html", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" }
  ],

  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/auth/login", "destination": "/pages/auth/login.html" },
    { "source": "/auth/register", "destination": "/pages/auth/register.html" },
    { "source": "/education", "destination": "/pages/education/index.html" },
    { "source": "/signals", "destination": "/pages/signals/index.html" },
    { "source": "/subscription", "destination": "/pages/payment/subscription.html" },
    { "source": "/:path*", "destination": "/:path*" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; connect-src 'self' https://*.supabase.co; img-src 'self' data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
        },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" }
      ]
    }
  ]
}
